<div class="page-header">
  <div class="container-fluid">
    <div class="page-header-content py-5">
      <h1 class="page-header-title">
        <div class="page-header-icon"><span class="mdi mdi-ammunition"></span></div>
        <span>Ammo</span>
      </h1>
      <div class="page-header-subtitle">All of the ammo found in the world</div>
    </div>
  </div>
</div>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12">

      <% @ammos.each do |ammo| %>
      
        <div class="card mb-3">
          <div class="row no-gutters" style="background: #0d0d0d;">
            <div class="col-3 align-self-center">
              <%= image_tag "ammo/#{ammo.slug.parameterize}.png", class: "w-100" %>
            </div>
            <div class="col-9" style="background: #ffffff;">
              <div class="card-body pb-1">
                <h5 class="card-title"><%= ammo.name %></h5>
                
                <div class="row">
                  <div class="col-6">
                    <p class="card-text mb-1">
                      <b>Weapons:</b> 
                      <% ammo.ammo_uses.each do |ammo| %>
                        <%= ammo.weapon.name %>
                      <% end %>
                    </p>
                  </div>

                  <div class="col-6">
                    <p class="card-text mb-1"><b>Buy:</b> <%= number_to_currency(ammo.buy, precision: 0) %></p>
                    <p class="card-text mb-1"><b>Sell:</b> <%= number_to_currency(ammo.sell, precision: 0) %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>